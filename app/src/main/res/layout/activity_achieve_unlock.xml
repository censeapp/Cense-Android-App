<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/young_tesla"

    tools:context=".ui.achievements.AchieveUnlockActivity">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="420dp"
        android:layout_height="255dp"
        app:layout_constraintBottom_toBottomOf="@+id/share"
        app:layout_constraintEnd_toEndOf="@+id/share"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="@+id/share"
        app:layout_constraintTop_toTopOf="@+id/share"
        app:srcCompat="@drawable/green_gradient" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/close"
        android:layout_width="51dp"
        android:layout_height="49dp"
        android:clickable="true"
        android:foreground="@drawable/my_selector"
        android:onClick="change"
        android:src="@drawable/close_cross"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.986"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007"
        app:riv_corner_radius="50dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/share"
        android:layout_width="300dp"
        android:layout_height="86dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:foreground="@drawable/my_selector"
        android:onClick="change"
        android:src="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:riv_corner_radius="50dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="147dp"
        android:layout_height="43dp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:text="SHARE"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="@+id/share"
        app:layout_constraintStart_toStartOf="@+id/share"
        app:layout_constraintTop_toTopOf="@+id/share" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="280dp"
        android:layout_height="36dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:text="TO GET 50 BONUS POINTS"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="@+id/share"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/share"
        app:layout_constraintTop_toTopOf="@+id/share" />




</androidx.constraintlayout.widget.ConstraintLayout>