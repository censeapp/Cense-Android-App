<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/great_job"
    android:layout_height="match_parent"
    tools:context=".ui.done.DoneActivity">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/go_home"
        android:layout_width="266dp"
        android:layout_height="99dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:foreground="@drawable/my_selector"
        android:onClick="change"
        android:src="@drawable/go_home_in_done"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:riv_corner_radius="50dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/continue_studying"
        android:layout_width="307dp"
        android:layout_height="103dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="76dp"
        android:clickable="true"
        android:foreground="@drawable/my_selector"
        android:onClick="change"
        android:src="@drawable/continue_studying"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintStart_toStartOf="parent"
        app:riv_corner_radius="50dp" />


</androidx.constraintlayout.widget.ConstraintLayout>