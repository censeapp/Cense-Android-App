<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LockScreenActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/green_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/whiteBgLockScreen"
        android:layout_width="wrap_content"
        android:layout_height="630dp"
        android:scaleType="fitXY"
        android:src="@drawable/white_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="251dp"
        android:layout_height="256dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/dog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="252dp"
        android:layout_height="112dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/learnMoreButtonLockScreen"
        android:layout_width="257dp"
        android:layout_height="86dp"
        android:layout_marginTop="22dp"
        android:onClick="change"
        android:clickable="true"
        android:foreground="@drawable/my_selector"
        android:src="@drawable/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:riv_corner_radius="50dp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="147dp"
        android:layout_height="43dp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:text="Learn more"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="@+id/learnMoreButtonLockScreen"
        app:layout_constraintStart_toStartOf="@+id/learnMoreButtonLockScreen"
        app:layout_constraintTop_toTopOf="@+id/learnMoreButtonLockScreen" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="240dp"
        android:layout_height="36dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:text="To unlock your phone"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="@+id/learnMoreButtonLockScreen"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/learnMoreButtonLockScreen"
        app:layout_constraintTop_toTopOf="@+id/learnMoreButtonLockScreen" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/callButtonLockScreen"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="100dp"
        android:onClick="change"
        android:clickable="true"
        android:foreground="@drawable/my_selector"
        android:src="@drawable/call"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/messageButtonLockScreen"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="100dp"
        android:onClick="change"
        android:clickable="true"
        android:foreground="@drawable/my_selector"
        android:src="@drawable/massage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />
</androidx.constraintlayout.widget.ConstraintLayout>